    function Display() {
        var n1 = parseInt($("#Num1").val());
        var n2 = parseInt($("#Num2").val());

        $.ajax({
            type: 'Post',
            url: '@Url.Action("Add")',
            data: { num1: n1, num2: n2 },              /* store n1 value in num1 of controller store n2 value in num2 of controller */
            dataType: 'text',
            // success call back function
            success: function (response, status, xhr) {
                $("#result").text(response);
            },
            error: function (req, status, error) {
                $("#result").text(error);
            }
        });
    }

    function Display2() {
        var n1 = parseInt($("#Num1").val());
        var n2 = parseInt($("#Num2").val());

        $.ajax({
            type: 'Post',
            url: '@Url.Action("Subtract")',
            data: { num1: n1, num2: n2 },              /* store n1 value in num1 of controller store n2 value in num2 of controller */
            dataType: 'text',
            // success call back function
            success: function (response, status, xhr) {
                $("#result").text(response);
            },
            error: function (req, status, error) {
                $("#result").text(error);
            }
        });
    }

    function Calculate() {
        var n1 = parseInt($("#Num1").val());
        var n2 = parseInt($("#Num2").val());

        $.ajax({
            type: 'Post',
            url: '@Url.Action("Calculate")',
            data: { num1: n1, num2: n2 },              /* store n1 value in num1 of controller store n2 value in num2 of controller */
            dataType: 'json',
            // success call back function
            success: function (response, status, xhr) {
                var data = "ADDITION RESULT" + response.add +
                    "<br>SUBTRACTION RESULT" + response.subtract +
                    "<br>MULTIPLY RESULT" + response.multiply +
                    "<br>DIVISION RESULT" + response.division;
                $("#result").html(data);
            },
            error: function (req, status, error) {
                $("#result").text(error);
            }
        });
    }




</script>
